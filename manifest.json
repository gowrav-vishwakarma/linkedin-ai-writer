{
  "name": "My AI Writer for LinkedIn",
  "version": "3.0.0",
  "description": "AI-powered LinkedIn content writer supporting multiple providers (OpenAI, Anthropic, Ollama, LM Studio, Groq, Together AI)",
  "update_url": "https://epan.in/extensions/linkedin-responder/updates.xml",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*"
      ],
      "js": [
        "providers.js",
        "contentScript.js"
      ],
      "css": [
        "contentScript.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon.png"
    },
    "default_title": "My Extension",
    "default_popup": "popup.html",
    "default_width": 800,
    "default_height": 600
  }
}